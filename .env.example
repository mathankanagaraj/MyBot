# ============================================
# Angel Broker API Credentials
# ============================================
ANGEL_API_KEY=your_angel_api_key_here
ANGEL_CLIENT_CODE=your_client_code_here
ANGEL_PASSWORD=your_password_here
ANGEL_TOTP_SECRET=your_totp_secret_here

# ============================================
# Telegram Notifications - ANGEL ONE BOT
# ============================================
ANGEL_TELEGRAM_TOKEN=your_telegram_bot_token_here
ANGEL_TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# ============================================
# Telegram Notifications - IBKR BOT
# ============================================
IBKR_TELEGRAM_TOKEN=your_ibkr_telegram_bot_token_here
IBKR_TELEGRAM_CHAT_ID=your_ibkr_telegram_chat_id_here

# ============================================
# Indian Market Symbols (NSE)
# ============================================
# Note: NIFTY and BANKNIFTY will use futures contracts
SYMBOLS=NIFTY,BANKNIFTY,RELIANCE,INFY,TCS,ICICIBANK,HDFCBANK

# ============================================
# Trading Mode
# ============================================
MODE=LIVE  # Angel Broker doesn't support paper trading
IBKR_MODE=PAPER  # Options: PAPER or LIVE

# ============================================
# Risk Management
# ============================================
MAX_CONTRACTS_PER_TRADE=1
ALLOC_PCT=0.70
MAX_DAILY_LOSS_PCT=0.05
MAX_POSITION_PCT=0.70

# Stop Loss & Target (Recommended Settings)
RISK_PCT_OF_PREMIUM=0.15  # 15% SL (gives more breathing room than 10%)
RR_RATIO=2.0              # 1:2 Risk-Reward (target = 30%)
MIN_PREMIUM=5.0           # Minimum â‚¹5 / $5 premium
MAX_HOLD_MINUTES=30       # Force exit after 30 minutes

# ============================================
# Market Configuration
# ============================================
MARKET_HOURS_ONLY=true
TIMEZONE=Asia/Kolkata
LOG_LEVEL=INFO

# ============================================
# Broker Selection
# ============================================
BROKER=BOTH  # Options: ANGEL, IBKR, or BOTH

# ============================================
# IBKR Configuration
# ============================================
IB_HOST=127.0.0.1
IB_PORT=7497  # 7497=paper, 7496=live
IB_CLIENT_ID=109
IBKR_PAPER_BALANCE=10000
IBKR_SYMBOLS=TSLA,NVDA,MSFT,GOOGL,AAPL,AMZN,META
